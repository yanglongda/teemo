.identity-bg {
  width: 100vw;
  background: linear-gradient(#5FB1FA, #5186FA);
  height: calc(85vh - 160rpx);
  position: relative
}

.identity {
  width: 100vw;
  position: absolute;
  bottom: 0;
}

